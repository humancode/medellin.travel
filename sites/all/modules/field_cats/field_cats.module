function field_cats_field_schema($field) {
  if ($field['type'] == 'categories') {
  	$schema['columns']['tid'] = array(
  	  'type' => 'int',
  	  'not null' => FALSE,
	   );

  	$schema['indexes'] = array(
      'tid' => array('tid'),
    );
  }

  return $schema;
}

function field_cats_field_is_empty($item, $field) {
  if ($field['type'] == 'categories') {
	  if (empty($item['tid'])) {
	    return TRUE;
	   }
	}
	return FALSE;
}



